<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.FragmentOnMainActivity.Aqd2Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_black"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tx1aqd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <RelativeLayout
            android:id="@+id/relaqd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bf_card_yellow"
            android:layout_below="@id/tx1aqd2"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tx1aqd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Class"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardvaqd21"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_below="@id/tx1aqd1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:text="Assignment"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardvaqd22"
                android:layout_width="300dp"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:autofillHints="Quest"
                android:layout_below="@id/cardvaqd21">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quest"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="130dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardvaqd32"
                android:layout_width="300dp"
                android:layout_height="70dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/cardvaqd22">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discussion Board"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="100dp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relaqd2">

            <RelativeLayout
                android:id="@+id/relaqd1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/reltgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_blue_bright"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/dateday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:text="WED"/>

                        <TextView
                            android:id="@+id/datedate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:text="10"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relabsen"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/reltgl"
                        android:background="@drawable/bg_blue_dark">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="100%"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/releven"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/relativeLayout"
                    android:background="@drawable/bg_card_blue_bright">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EVENT"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vpassig2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/relaqd1"
                android:background="@drawable/cardradius"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai, Yopa bagus suryono"
                    android:textSize="14sp"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>