<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txvdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SELECT CONTENT"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    
    <Button
        android:id="@+id/btn_camera_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/txvdialog"
        android:gravity="center"
        android:hint="TAKE PHOTO"/>

    <Button
        android:id="@+id/btn_galery_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_camera_dialog"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="PICK IMAGE FROM GALERY"/>

</RelativeLayout>